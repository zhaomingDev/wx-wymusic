/* pages/index/index.wxss */
.banner{
  width: 100%;
  height: 300rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}
.navContainer {
  display: flex;
}
.navItem{
  display: flex;
  flex-direction:column;
  align-items: center;
  width: 20%;
}
.iconfont{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: rgb(240,19,19);
  color:white;
  font-size: 50rpx !important;
  border-radius: 50%;
  margin:20rpx auto;
}
.navItem text{
  font-size: 26rpx;
}

/* 内容区 */
.recommendScroll{
  display: flex;
  height: 300rpx;
  padding:0 20rpx 
}
.scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  font-size: 26rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}

/*排行版*/
.topList{
  padding:20rpx 0;
}
.topListSwiper{
  padding:0 10px;
  height: 400rpx;
}
.swiperItem .title{
  font-size: 30rpx;
  line-height: 80rpx;
}
.musicItem{
  display: flex;
  margin-bottom: 20rpx;
  /* align-content: center; */
}
.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}
.swiperItem{
  width: 96%;
  background: #fbfbfb;
}
.musicItem .count{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.musicItem .musicName{
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}